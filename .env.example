# BDNS Portal - Variables de Entorno

# Database (PostgreSQL)
DATABASE_URL=postgresql://bdns_user:password@localhost:5432/bdns
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false
WORKERS=4

# CORS
CORS_ORIGINS=http://localhost:3000,https://portal.bdns.example.com

# GraphQL
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
